<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.xyjune.ddactionbar.BaseActionBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        app:titleGravity="left"
        app:titleSize="18sp"
        app:titleStatusBarInclude="true"
        app:titleText="BaseActionBar" />

    <com.xyjune.ddactionbar.BaseActionBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        app:titleColor="#00adfa"
        app:titleSize="18sp"
        app:titleText="BaseActionBar" />

    <com.xyjune.ddactionbar.DDActionBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        app:leftIcon="@drawable/ic_arrow_back_black_24dp"
        app:leftIconHeight="40dp"
        app:leftText="left"
        app:rightText="right"
        app:titleColor="#00adfa"
        app:titleStatusBarInclude="true"
        app:titleGravity="center"
        app:titleMode="left_text"
        app:titleSize="18sp"
        app:titleText="DDActionBar" />

    <com.xyjune.ddactionbar.DDActionBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        app:leftIcon="@drawable/ic_arrow_back_black_24dp"
        app:leftIconHeight="40dp"
        app:leftText="left"
        app:rightText="right"
        app:titleColor="#00adfa"
        app:titleGravity="center"
        app:titleMode="left_icon"
        app:titleSize="18sp"
        app:titleText="DDActionBar" />

    <com.xyjune.ddactionbar.DDActionBar
        android:id="@+id/ddactionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        app:leftIcon="@drawable/ic_arrow_back_black_24dp"
        app:leftIconHeight="40dp"
        app:leftText="left"
        app:rightText="right"
        app:titleColor="#00adfa"
        app:titleGravity="center"
        app:titleMode="icon_text"
        app:titleSize="18sp"
        app:titleText="DDActionBar" />

</LinearLayout>